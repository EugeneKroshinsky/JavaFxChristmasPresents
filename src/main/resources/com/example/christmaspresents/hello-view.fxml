<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="418.0" prefWidth="254.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.christmaspresents.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Производители:" />
   <ComboBox fx:id="producerComboBox" prefWidth="150.0" />
   <Label text="Предложения:" />
   <ComboBox fx:id="productComboBox" prefWidth="150.0" />
   <HBox alignment="CENTER" prefHeight="26.0" prefWidth="214.0">
      <children>
         <CheckBox fx:id="checkBox" mnemonicParsing="false" text="Вы являетсь нашим клиентом?" />
      </children>
   </HBox>
   <Button fx:id="button" mnemonicParsing="false" onAction="#buttonOnClick" text="Узнать цену" />
   <HBox alignment="CENTER" prefHeight="25.0" prefWidth="214.0">
      <children>
      
          <Label text="Цена:">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Label>
         <Label fx:id="priceLabel" text="0">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Label>
      </children>
   </HBox>
</VBox>
